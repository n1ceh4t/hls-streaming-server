{
  "name": "hls-iptv-server",
  "version": "1.0.0",
  "description": "Production-ready HLS/IPTV streaming server - Easy setup, configurable, and scalable",
  "main": "dist/index.js",
  "scripts": {
    "dev": "node node_modules/tsx/dist/cli.mjs watch src/index.ts",
    "build": "node node_modules/typescript/bin/tsc",
    "start": "node dist/index.js",
    "test": "node node_modules/jest/bin/jest.js",
    "test:watch": "node node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node node_modules/jest/bin/jest.js --coverage",
    "lint": "node node_modules/eslint/bin/eslint.js src --ext .ts",
    "lint:fix": "node node_modules/eslint/bin/eslint.js src --ext .ts --fix",
    "format": "node node_modules/prettier/bin/prettier.cjs --write \"src/**/*.ts\"",
    "setup": "node scripts/setup.js",
    "migrate": "bash scripts/migrate.sh",
    "migrate:ts": "node node_modules/tsx/dist/cli.mjs scripts/migrate.ts",
    "test-parser": "node node_modules/tsx/dist/cli.mjs scripts/test-media-parser.ts",
    "docker:build": "docker build -t hls-iptv-server .",
    "docker:run": "docker-compose up -d"
  },
  "keywords": [
    "hls",
    "iptv",
    "streaming",
    "video",
    "ffmpeg",
    "epg",
    "m3u8",
    "live-streaming"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "chokidar": "^3.6.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "helmet": "^7.1.0",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "uuid": "^9.0.1",
    "ws": "^8.17.0",
    "zod": "^3.23.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
