# Server Configuration
NODE_ENV=development
PORT=8080
HOST=0.0.0.0
WEBSOCKET_PORT=8081

# Media Configuration
# Comma-separated list of directories to scan for media files
MEDIA_DIRECTORIES=/path/to/your/media,/path/to/more/media
# Output directory for HLS segments
HLS_OUTPUT_DIR=./hls_output
# Temp directory for processing
TEMP_DIR=./temp

# Streaming Configuration
DEFAULT_VIDEO_BITRATE=1500000
DEFAULT_AUDIO_BITRATE=128000
DEFAULT_RESOLUTION=1920x1080
DEFAULT_FPS=30
DEFAULT_SEGMENT_DURATION=6
# Maximum number of concurrent FFmpeg processes
MAX_CONCURRENT_STREAMS=8

# Security Configuration
# Generate a secure random string for production!
API_KEY=change-this-to-a-secure-random-string
# Enable/disable authentication (set to 'false' for no auth)
REQUIRE_AUTH=true
# Rate limiting: max requests per window
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW_MS=900000

# Feature Flags
ENABLE_EPG=true
ENABLE_ANALYTICS=true
ENABLE_AUTO_SCAN=true
# Scan for new media files every N minutes
AUTO_SCAN_INTERVAL=60

# Logging
LOG_LEVEL=info
# Options: 'pretty' for development, 'json' for production
LOG_FORMAT=pretty

# FFmpeg Configuration
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe
# Enable hardware acceleration (nvenc, qsv, videotoolbox, none)
HW_ACCEL=none

# Advanced
# Cleanup old segments older than N seconds
SEGMENT_CLEANUP_INTERVAL=30
SEGMENT_MAX_AGE=300
# Session timeout in seconds
SESSION_TIMEOUT=300
